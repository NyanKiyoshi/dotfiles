[bar/top]
inherit = bar/master
modules-left = ram cpu up-speed down-speed
modules-center = workspaces
modules-right = home root time volume

[module/network]
type = internal/network
interface = eno1
ping-interval = 3

format-connected-padding = 1
label-connected-padding-left = 1


accumulate-stats = true

